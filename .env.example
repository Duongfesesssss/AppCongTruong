# ======================
# DOCKER COMPOSE ENV
# ======================

# MongoDB
MONGO_ROOT_PASSWORD=your_mongo_root_password_here_change_me
MONGO_URI=mongodb://admin:your_encoded_password@mongodb:27017/appcongtruong?authSource=admin

# JWT Secrets (generate vá»›i: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_change_me
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_change_me

# Cookie Security
# Set to "true" for HTTPS servers, "false" for HTTP servers
# IMPORTANT: If your server uses HTTP (not HTTPS), set this to "false"
# Otherwise refresh token cookies will not work and users will be logged out
COOKIE_SECURE=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=appcongtruong-uploads

# Storage type: "local" or "s3"
STORAGE_TYPE=s3

# API URL for client
# Use "/api" for production with nginx reverse proxy (relative URL)
# Use "http://localhost:4000/api" for local development without nginx (absolute URL)
NUXT_PUBLIC_API_BASE=/api
